@{
    ViewData["Subject"] = "Create Subject";
}
@model FS_PROJECT_ASPNETCore_WebTutorQuizzer.Models.SubjectModel;

<h1>Add Subject</h1>
<form asp-action="Create" asp-controller="Subject" method="post">
